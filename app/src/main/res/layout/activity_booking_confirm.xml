<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">



        <TextView

            android:text="Vaccination App"
            android:textSize="25dp"
            android:fontFamily="@font/graphikregular"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:scrollbars="vertical"
            >

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView

                android:text="Thank you for Booking Apointmentwith us. your Appointment is pending with hospital."

                android:fontFamily="@font/graphikregular"
                android:textSize="16dp"
                android:layout_margin="15dp"
                android:textColor="#000"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView

                android:text="Once confirmed by hospital, you will recieve the nofication via email."
                android:textSize="16dp"
                android:fontFamily="@font/graphikregular"

                android:layout_margin="15dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scrollbars="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:text="Note :If accepted, Please makeure to carry the health cardor ny ID Proof to the hospital"

                    android:fontFamily="@font/graphikregular"
                    android:textSize="14dp"
                    android:layout_margin="15dp"
                    android:textColor="#D50000"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />




            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnreturn"
            android:text="Return to HomePage"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:textColor="#fff"

            android:fontFamily="@font/graphikregular"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textStyle="bold"
            android:background="@drawable/button_rounded" />



    </LinearLayout>


</LinearLayout>